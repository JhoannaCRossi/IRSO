package ejercicio2;

import java.util.Scanner;

/* Desarrollar el código para leer desde teclado tres variables del tipo
 * flotantes, luego realizar el siguiente cálculo e imprimir el resultado por
 * pantalla. resultado = (primeraVariable * segundaVariable) / terceraVariable
 * */

public class Main {
	public static void main(String[] args){
		//instancio scanner
		Scanner sc = new Scanner(System.in);

		//declaro variables
		float primeraVariable, segundaVariable, terceraVariable, resultado;
		
		System.out.println("Ingrese por favor 3 numeros a continuación: ");
		System.out.println("Primera Variable:");
		primeraVariable = sc.nextFloat();
		System.out.println("Segunda Variable:");
		segundaVariable = sc.nextFloat();
		System.out.println("Tercera Variable:");
		terceraVariable = sc.nextFloat();
		
		resultado = (primeraVariable * segundaVariable) / terceraVariable;
		System.out.println("El resultado es: " + resultado);
		
		
		
		
		
		
	}
	
	public static boolean IsFloat(String text) {
	    float flotante;
	    try {
	    	flotante = Float.parseFloat(text);
	      return true;
	    } catch (NumberFormatException ex) {
	       return false;
	    }
	}
}
