package ejercicio2;

import java.util.Scanner;

/* Desarrollar el código para leer desde teclado tres variables del tipo
 * flotantes, luego realizar el siguiente cálculo e imprimir el resultado por
 * pantalla. resultado = (primeraVariable * segundaVariable) / terceraVariable
 * */

public class Main {
	public static void main(String[] args){
		//instancio scanner
		Scanner sc = new Scanner(System.in);

		//declaro variables
		float primeraVariable, segundaVariable, terceraVariable, resultado;
		String entrada;
		
		System.out.println("Ingrese por favor 3 numeros a continuación: ");		
		do {          
		    System.out.println("Please , give me your first number");
		    entrada = sc.nextLine(); //Se lee la entrada como cadena
		} while(!IsFloat(primeraVariable)); //Se sigue pidiendo la entrada si no es entero
		primeraVariable = Float.parseFloat(entrada);
		
		
		
		
		
	}
	
	public static boolean IsFloat(String text) {
	    float flotante;
	    try {
	    	flotante = Float.parseFloat(text);
	      return true;
	    } catch (NumberFormatException ex) {
	       return false;
	    }
	}
}
